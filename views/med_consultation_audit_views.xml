<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================= TREE VIEW ================= -->
    <record id="view_med_consultation_audit_tree" model="ir.ui.view">
        <field name="name">med.consultation.audit.tree</field>
        <field name="model">med.consultation.audit</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="create_date"/>
                <field name="consultation_id"/>
                <field name="user_id"/>
                <field name="role"/>
                <field name="action"/>
                <field name="field_name"/>
                <field name="old_value"/>
                <field name="new_value"/>
            </tree>
        </field>
    </record>

    <!-- ================= FORM VIEW ================= -->
    <record id="view_med_consultation_audit_form" model="ir.ui.view">
        <field name="name">med.consultation.audit.form</field>
        <field name="model">med.consultation.audit</field>
        <field name="arch" type="xml">
            <form string="Audit Entry" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <field name="consultation_id"/>
                        <field name="create_date"/>
                    </group>

                    <group>
                        <field name="user_id"/>
                        <field name="role"/>
                        <field name="action"/>
                    </group>

                    <group>
                        <field name="field_name"/>
                        <field name="old_value"/>
                        <field name="new_value"/>
                    </group>

                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
