<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_med_staff_form" model="ir.ui.view">
        <field name="name">med.staff.form</field>
        <field name="model">med.staff</field>
        <field name="arch" type="xml">
            <form string="Medical Staff">

                <header>
                    <button name="action_create_user"
                            type="object"
                            string="Create Login"
                            class="btn-primary"
                            attrs="{'invisible':[('user_id','!=',False)]}"/>
                </header>

                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group col="4">
                        <group col="2">
                            <field name="employee_id"/>
                            <field name="role"/>
                            <field name="job_title"/>
                            <field name="department"/>
                            <field name="user_id" readonly="1"/>
                        </group>

                        <group>
                            <field name="image"
                                   widget="image"
                                   class="oe_avatar"
                                   options="{'preview_image': 'image'}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Contact">
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
